<!-- 登入頁面 -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <style>
        /* 以下style部分均爲配置版面的css */
        @import url(https://fonts.googleapis.com/css?family=Roboto:300);
        .login-page {
            width: 800px;
            padding: 7% 0 0;
            margin: auto;
        }
        .form {
            position: relative;
            z-index: 1;
            background: #FFFFFF;
            max-width: 700px;
            margin: 0 auto 100px;
            padding: 45px;
            text-align: center;
            box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        }
        .form input {
            font-family: "Roboto", sans-serif;
            outline: 0;
            background: #f2f2f2;
            width: 100%;
            border: 0;
            margin: 0 0 15px;
            padding: 15px;
            box-sizing: border-box;
            font-size: 14px;
        }
        .form button {
            font-family: "Roboto", sans-serif;
            text-transform: uppercase;
            outline: 0;
            background: rgb(150, 150, 150);
            width: 100%;
            border: 0;
            padding: 15px;
            color: #FFFFFF;
            font-size: 14px;
            -webkit-transition: all 0.3 ease;
            transition: all 0.3 ease;
            cursor: pointer;
        }
        .form button:hover,.form button:active,.form button:focus {
            background: rgb(46, 46, 46);
        }
        .form .message {
            margin: 15px 0 0;
            color: #b3b3b3;
            font-size: 12px;
        }
        .form .message a {
            color: #4CAF50;
            text-decoration: none;
        }
        body {
            background: #76b852;    /* fallback for old browsers */
            background: linear-gradient(90deg, rgb(46, 46, 46) 0%, rgb(48, 48, 48) 50%);
            font-family: "Roboto", sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;      
        }
    </style>
</head>
<body>
    <div class="login-page" style="overflow: hidden;">
        <div class="form">
            <h3>SuperMap®</h3>
            <h1>登入</h1>
            <!-- 登入表單 -->
            <form class="login-form" action="/login" method="POST">
                <!-- 如果曾經登入過或者注冊成功，都會在客戶端留下locals的cookile并且不需要客戶再寫賬號信息 -->
                <% if (locals.email) { %>
                    <input type="email" id="email" name="email" placeholder="Email" value=<%= locals.email %>>  
                <% } else { %>
                    <input type="email" id="email" name="email" placeholder="Email"/> 
                <% } %>
                <input type="password" placeholder="Password" name="password"/>
                <button type="submit">login</button>
                <!-- 通過後端判定登入的驗證規則，如果錯誤會回報到前端，並使用err接收 -->
                <% if (locals.err) { %>
                    <p style="color: red;"><%= locals.err %></p>
                <% } %>
                <p class="message">Not registered? <a href="/register">Create an account</a></p>
                <!--  添加游客模式，游客模式下用戶不需要登入即可瀏覽主頁 -->
                <p class="message" style="font-size: 15px;"><a href="/tourist_visit">遊客模式</p>
            </form>
        </div>
    </div>
</body>
</html>